<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <!-- Bottom sheet contents. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:gravity="center"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">
                <Button
                    android:id="@+id/addLight"
                    style="@style/Widget.Watts.Button.IconButton"
                    app:icon="@drawable/ic_add_48px"
                    android:layout_gravity="center"
                    />

                <TextView
                    style="@style/Widget.Watts.TextView.IconButton"
                    android:text="Add Light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">
                <Button
                    android:id="@+id/editRoomName"
                    style="@style/Widget.Watts.Button.IconButton"
                    app:icon="@drawable/ic_baseline_edit_24"
                    />
                <TextView
                    style="@style/Widget.Watts.TextView.IconButton"
                    android:text="Edit Room Name"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">
                <Button
                    android:id="@+id/deleteRoom"
                    style="@style/Widget.Watts.Button.IconButton"
                    app:icon="@drawable/ic_delete_forever_24"
                    app:iconTint="@color/app_red_error"
                    />
                <TextView
                    style="@style/Widget.Watts.TextView.IconButton"
                    android:text="Delete Room"
                    android:textColor="@color/app_red_error"/>
            </LinearLayout>
        </LinearLayout>


</LinearLayout>