<?xml version="1.0" encoding="utf-8"?>
<com.bosphere.fadingedgelayout.FadingEdgeLayout
    style="@style/Widget.Watts.FadeLayout.LargeCard"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Watts.Card.BackgroundGlowCard">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/roomSelectableCard"
            style="@style/Widget.Watts.Card.SelectableLargeCardElevated">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <!--Text View to display Course Name-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|top">

                    <TextView
                        android:id="@+id/roomName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:text="TEST"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/roomSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:checked="false"/>

                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </com.google.android.material.card.MaterialCardView>
</com.bosphere.fadingedgelayout.FadingEdgeLayout>