<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sceneCard"
        style="@style/Widget.Watts.Card.SelectableTileCardElevatedMedium"
        android:layout_height="110dp"
        android:layout_width="220dp"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:checkable="true" >

        <LinearLayout
            android:id="@+id/sceneCardCanvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/sceneName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="PLACE_HOLDER"
                    android:textStyle="bold"
                    />

            <LinearLayout
                android:id="@+id/scenePreview"
                android:layout_marginTop="10dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:animateLayoutChanges="true"
                android:orientation="horizontal"
                android:gravity="center">


                <ImageView
                    android:id="@+id/sceneOnIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:src="@drawable/ic_power_settings_new_30px"
                    app:tint="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>